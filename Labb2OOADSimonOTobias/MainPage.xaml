<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:Labb2OOADSimonOTobias" 
             x:Class="Labb2OOADSimonOTobias.MainPage"
             BindingContext="{local:ViewModels.MainPageVeiwModel}">
    <StackLayout>
        <Label Text="Have I been pwned?" HorizontalTextAlignment="Center"/>
        <Entry Placeholder="Email" Text="{Binding InputLabel.Value}"/>
        <Label Text="{Binding InputLabel.Errors, Converter={local:ErrorConverter}}"/>
        <Button Text="Pwned?" Command="{Binding PwnedButton}"/>
        <Label Text="{Binding OutputLabel}"/>
    </StackLayout>
</ContentPage>